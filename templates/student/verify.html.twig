{% extends 'base_student.html.twig' %}

{% block body %}
    <div class="accordion mt-5 mt-5" id="accordionExample">
        <div class="accordion-item">
            <h2 class="accordion-header">
                <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                    <span class="fw-bold">IDENTITES</span>
                </button>
            </h2>
            <div id="collapseOne" class="accordion-collapse collapse show" data-bs-parent="#accordionExample">
                <div class="accordion-body text-center">
                    <img src="{{ qr.qrcode(link, data.student.code) }}" class="img-thumbnail" style="width:25%" alt="qr-code">
                    <h3 class="fw-bold">{{ datas.name | upper }} {{ datas.fistName | upper }} {{ datas.lastName | upper }}</h3>
                    <h5 class="fst-italic fw-bold">{{ datas.fistChoice.name }}</h5>
                </div>
            </div>
        </div>
        <div class="accordion-item">
            <h2 class="accordion-header">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                    <span class="fw-bold">TRANSPORT</span>
                </button>
            </h2>
            <div id="collapseTwo" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
                <div class="accordion-body">
                    <div class="row py-1">
                        <div class="col-md-4 text-center">
                            <div class="alert {{ data.transpOne == true ? 'alert-success' : 'alert-danger' }} mx-1">
                                <h3 class="fw-bold">Transport : 1</h3>
                                {% if data.transpOne %}
                                    <i class="bi bi-check-circle h1 fw-bold"></i>
                                {% else %}
                                    <i class="bi bi-x-circle h1 fw-bold"></i>
                                {% endif %}
                            </div>
                        </div>
                        <div class="col-md-4 text-center">
                            <div class="alert {{ data.transpTwo == true ? 'alert-success' : 'alert-danger' }} mx-1">
                                <h3 class="fw-bold">Transport : 2</h3>
                                {% if data.transpTwo %}
                                    <i class="bi bi-check-circle h1 fw-bold"></i>
                                {% else %}
                                    <i class="bi bi-x-circle h1 fw-bold"></i>
                                {% endif %}
                            </div>
                        </div>
                        <div class="col-md-4 text-center">
                            <div class="alert {{ data.transpThree == true ? 'alert-success' : 'alert-danger' }} mx-1">
                                <h3 class="fw-bold">Transport : 2</h3>
                                {% if data.transpThree %}
                                    <i class="bi bi-check-circle h1 fw-bold"></i>
                                {% else %}
                                    <i class="bi bi-x-circle h1 fw-bold"></i>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="accordion-item">
            <h2 class="accordion-header">
                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                    <span class="fw-bold">FRAIS ACADEMIQUES</span>
                </button>
            </h2>
            <div id="collapseThree" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
                <div class="accordion-body">
                    <div class="row py-1">
                        <div class="col-md-4 text-center">
                            <div class="alert {{ data.feesOne == true ? 'alert-success' : 'alert-danger' }} mx-1">
                                <h3 class="fw-bold">Minerval : 1</h3>
                                {% if data.feesOne %}
                                    <i class="bi bi-check-circle h1 fw-bold"></i>
                                {% else %}
                                    <i class="bi bi-x-circle h1 fw-bold"></i>
                                {% endif %}
                            </div>
                        </div>
                        <div class="col-md-4 text-center">
                            <div class="alert {{ data.feesTwo == true ? 'alert-success' : 'alert-danger' }} mx-1">
                                <h3 class="fw-bold">Minerval : 2</h3>
                                {% if data.feesTwo %}
                                    <i class="bi bi-check-circle h1 fw-bold"></i>
                                {% else %}
                                    <i class="bi bi-x-circle h1 fw-bold"></i>
                                {% endif %}
                            </div>
                        </div>
                        <div class="col-md-4 text-center">
                            <div class="alert {{ data.feesThree == true ? 'alert-success' : 'alert-danger' }} mx-1">
                                <h3 class="fw-bold">Minerval : 2</h3>
                                {% if data.feesThree %}
                                    <i class="bi bi-check-circle h1 fw-bold"></i>
                                {% else %}
                                    <i class="bi bi-x-circle h1 fw-bold"></i>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}


