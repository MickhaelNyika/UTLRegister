    <div class="col">
        <div class="card mb-3">
            <div class="card-body ">
                <h4 class="fw-bold">Applications par filière : {{ pre }}</h4>
                {{ render_chart(chartTwo) }}
            </div>
        </div>
    </div>

    <div class="col">
        <div class="card mb-3">
            <div class="card-body ">
                <h4 class="fw-bold">Application par filière : {{ confirm }}</h4>
                {{ render_chart(chartConfirmTwo) }}
